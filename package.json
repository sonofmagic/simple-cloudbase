{
  "name": "simple-cloudbase",
  "version": "0.2.5",
  "description": "a simple toolkit for cloudbase,which aims to improve wechat miniprogram developing experience",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "yarn clear && rollup -c",
    "build:map": "yarn clear && cross-env SOURCEMAP=1 rollup -c",
    "build:tsc": "tsc -p tsconfig.build.json",
    "watch": "tsc -w -p tsconfig.build.json --sourcemap",
    "test": "yarn build && jest",
    "debug:stcb": "node bin/stcb",
    "clear": "node scripts/clear.js",
    "raw": "node --require ts-node/register ./test/raw.ts",
    "test:codecov": "tsc -p . --sourcemap && jest && codecov"
  },
  "files": [
    "bin",
    "dist"
  ],
  "bin": {
    "stcb": "bin/stcb"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/simple-cloudbase.git"
  },
  "keywords": [
    "cli",
    "云开发",
    "微信",
    "小程序",
    "云函数",
    "SCF",
    "Serverless",
    "Cloudbase"
  ],
  "author": "ice breaker <1324318532@qq.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sonofmagic/simple-cloudbase/issues"
  },
  "homepage": "https://cloudbase.icebreaker.top",
  "devDependencies": {
    "@cloudbase/cli": "^1.12.0",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "commander": "^8.3.0",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "del": "^6.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "execa": "^5.0.0",
    "jest": "^27.4.7",
    "lodash": "^4.17.21",
    "rollup": "^2.63.0",
    "simple-cloudbase-router": "^1.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "wx-server-sdk": "^2.5.3"
  },
  "dependencies": {
    "esbuild": "^0.14.11"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  }
}
