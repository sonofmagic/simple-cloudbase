    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "execa": "^5.0.0",
    "jest": "^27.3.1",
    "simple-cloudbase-router": "^0.1.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "wx-server-sdk": "^2.5.3"
  },
  "dependencies": {
    "commander": "^8.3.0",
    "consola": "^2.15.3",
    "esbuild": "^0.13.15",
